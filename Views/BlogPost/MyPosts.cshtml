@model IEnumerable<BlogMvc.Models.ViewModels.BlogPostViewModel>
@{
    ViewData["Title"] = "ჩემი პოსტები";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-person-lines-fill me-2"></i>ჩემი პოსტები</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            ჯერ არ გაქვთ შექმნილი პოსტი.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-primary">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@post.Title</h5>
                            <p class="card-text text-truncate" style="max-height: 4.5em; overflow: hidden;">
                                @Html.Raw(post.Content)
                            </p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-controller="BlogPost" asp-action="Details" asp-route-id="@post.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> ნახვა
                            </a>
                            <a asp-controller="BlogPost" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil"></i> რედაქტირება
                            </a>
                            <form asp-action="Delete" asp-route-id="@post.Id" method="post" class="d-inline delete-post-form">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> წაშლა
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.delete-post-form').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                if (confirm("ნამდვილად გსურთ პოსტის წაშლა?")) {
                    fetch(this.action, {
                        method: 'POST',
                        body: new FormData(this)
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert(data.message);
                        }
                    });
                }
            });
        });
    </script>
}
    