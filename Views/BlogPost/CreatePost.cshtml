@model BlogMvc.Models.ViewModels.CreatePostViewModel
@{
    ViewData["Title"] = "ახალი პოსტის დამატება";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <h1 class="display-5 fw-bold text-primary mb-3">
                    <i class="bi bi-pencil-square me-2"></i>ახალი პოსტის შექმნა
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="BlogPost" asp-action="GetAllPosts" class="text-decoration-none">
                                <i class="bi bi-house me-1"></i>მთავარი
                            </a>
                        </li>
                        <li class="breadcrumb-item active">ახალი პოსტი</li>
                    </ol>
                </nav>
            </div>

            <!-- Create Form -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="CreatePost" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">
                                <i class="bi bi-type me-1"></i>სათაური
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg"
                                   placeholder="შეიყვანეთ პოსტის სათაური..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Author -->
                        <div class="mb-4">
                            <label asp-for="Author" class="form-label fw-bold">
                                <i class="bi bi-person me-1"></i>ავტორი
                            </label>
                            <input asp-for="Author" class="form-control"
                                   placeholder="თქვენი სახელი..."
                                   value="@User.Identity?.Name" />
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>

                        <!-- Content -->
                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-bold">
                                <i class="bi bi-text-paragraph me-1"></i>შინაარსი
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="10"
                                      placeholder="დაწერეთ თქვენი პოსტის შინაარსი..."></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                მინიმუმ 10, მაქსიმუმ 5000 სიმბოლო
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-controller="BlogPost" asp-action="GetAllPosts" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>გაუქმება
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>გამოქვეყნება
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tips Section -->
            <div class="card border-0 shadow-sm mt-4 bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-lightbulb me-2 text-warning"></i>რჩევები
                    </h5>
                    <ul class="mb-0">
                        <li>გამოიყენეთ მკაფიო და საინტერესო სათაური</li>
                        <li>დაყავით ტექსტი აბზაცებად უკეთესი წაკითხვადობისთვის</li>
                        <li>გადაამოწმეთ გრამატიკა გამოქვეყნებამდე</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>