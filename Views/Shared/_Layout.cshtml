<!DOCTYPE html>
<html lang="ka">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogMvc</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-journal-text me-2"></i>BlogMvc
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>მთავარი
                            </a>
                        </li>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            @if (User.IsInRole("User") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Blog" asp-action="Create">
                                        <i class="bi bi-plus-circle me-1"></i>ახალი პოსტი
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Blog" asp-action="MyPosts">
                                        <i class="bi bi-person-lines-fill me-1"></i>ჩემი პოსტები
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear me-1"></i>ადმინისტრაცია
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="bi bi-speedometer2 me-2"></i>დაშბორდი
                                        </a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="ManagePosts">
                                            <i class="bi bi-collection me-2"></i>პოსტების მართვა
                                        </a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    
                    <!-- Search Form -->
                    <form class="d-flex me-3" asp-controller="Home" asp-action="Index" method="get">
                        <div class="input-group">
                            <input class="form-control form-control-sm" type="search" name="searchTerm" 
                                   placeholder="ძიება..." value="@ViewBag.SearchTerm">
                            <button class="btn btn-outline-light btn-sm" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- User Menu -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2025 - BlogMvc. ყველა უფლება დაცულია.</p>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">
                        კონფიდენციალურობა
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>